{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend Server",
            "type": "shell",
            "command": "npm",
            "args": ["run", "dev"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend Client",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/my-page"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Full Application",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start Backend Server",
                "Start Frontend Client"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
